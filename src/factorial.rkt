; Factorial in Scheme

; A linear iterative factorial
(define (factorial n) 
  (fact-iter 1 1 n))

(define (fact-iter product counter max-count)
  (if (> counter max-count)
      product
      (fact-iter (* counter product)
                 (+ counter 1)
                 max-count)))

; A linear recursive factorial
(define (factorial2 n)
  (if (= n 1) 
      1 
      (* n (factorial (- n 1)))))